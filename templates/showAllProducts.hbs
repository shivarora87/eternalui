<div class="container">
    <div class="row">
        <div class="col-md-5"> </div>
        <div class="col-md-5">All Products</div>
        <div class="col-md-2"> </div>
        <div class="col-md-12">
            <table id="datatable" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Source</th>
                    <th>Url</th>
                    <th>Title</th>
                    <th>Price</th>
                </tr>
                </thead>

                <tbody>
                    {{#each data.rows}}
                        <tr>
                            <td>{{id}}</td>
                            <td>{{website_source}}</td>
                            <td>{{url}}</td>
                            <td>{{productTitle}}</td>
                            <td>{{price}}</td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="/js/jquery-1.12.3.min.js" ></script>
<script>
    $(document).ready(function() {
        $('#datatable').DataTable({
            "ajax": "/products",
            "columns": [
                { "data": "id" },
                { "data": "website_source" },
                { "data": "url" },
                { "data": "productTitle" },
                { "data": "price" }
            ]
        });
    } );

</script>
